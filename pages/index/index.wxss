/**index.wxss**/

.container {
  height: 100%;
  width: 100%;
  font-size: 26rpx;
}

.container .tabList {
  width: 100%;
  height: 100rpx;
  background: #0093e0;
  white-space: nowrap;
}

.container .tabList .item {
  width: 150rpx;
  display: inline-block;
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  box-sizing: border-box;
}

.container .tabList .item.select {
  border-bottom: 5rpx solid #fff;
}

.container image {
  width: 100%;
  height: 300rpx;
}

.container .tabInfos {
  width: 100%;
  height: 100%;
}
